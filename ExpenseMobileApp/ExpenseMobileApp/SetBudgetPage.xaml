<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseMobileApp.SetBudgetPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" 
               Padding="24" 
               CornerRadius="0">

                <Label x:Name ="SetbudgetLabel" Text="Welcome to Expense Tracker App!" 
                   HorizontalTextAlignment="Center" 
                   FontSize="36"
                   FontAttributes="Bold"
                   FontFamily="Verdana"/>
            </Frame>
            
            <Label x:Name ="BudgetLable" Text="Set Your Monthly Budget for" 
               FontSize="Title" 
               FontFamily="Verdana"
               Padding="70,10,30,10"
               Margin="0,20,0,0"/>
            <Entry  x:Name="BudgetInputTextbox"
                Placeholder="Enter Budget" />
            <Button x:Name="ContinueButton"
                Text="Continue" 
                FontFamily="Verdana"
                FontSize="Medium"
                Clicked="OnContinueButtonClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>