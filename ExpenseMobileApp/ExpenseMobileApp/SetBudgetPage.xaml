<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseMobileApp.SetBudgetPage">
    <ContentPage.Content>
        <StackLayout>
            
            
            <Label x:Name ="BudgetLabel" Text="Set Your Monthly Budget for" 
               FontSize="Title" 
               FontAttributes="Bold"
               FontFamily="Verdana"
               Padding="70,10,30,10"
               Margin="0,20,0,0"/>
            <Label x:Name ="YearMonthLabel" 
               FontSize="Title" 
               FontAttributes="Bold"
               FontFamily="Verdana"
               Padding="70,10,30,10"
               HorizontalTextAlignment="Center"
               />
            
            <Entry  x:Name="BudgetInputTextbox"
                Placeholder="Enter Budget" />
            <Button x:Name="ContinueButton"
                Text="Continue" 
                FontFamily="Verdana"
                FontSize="Medium"
                Clicked="OnContinueButtonClicked"/>
            <Button x:Name="CancelButton"
                Text="Cancel" 
                FontFamily="Verdana"
                FontSize="Medium"
                Clicked="OnCancelButtonClicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>